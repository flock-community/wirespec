{
  "name": "npm-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run generate && npm run compile && npm test",
    "clean": "npm run clean:node_modules && npm run clean:generated && npm run clean:lib",
    "clean:generated": "npx --yes rimraf ./src/gen",
    "clean:lib": "npx --yes rimraf ./lib",
    "clean:node_modules": "npx --yes rimraf ./node_modules",
    "clean:wirespec": "npx --yes rimraf node_modules/.bin/wirespec",
    "compile": "tsc",
    "format": "npm run format:prettier",
    "format:prettier": "npx --yes prettier --write --ignore-unknown .",
    "generate": "wirespec compile -i ./wirespec -o ./src/gen -l TypeScript --shared",
    "test": "vitest --run",
    "update": "npx --yes update-ruecksichtslos"
  },
  "author": "",
  "license": "Apache-2.0",
  "description": "",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "wirespec": "file://../../src/plugin/npm/build/dist/js/productionLibrary"
  }
}
